<div class="sidebar" role="aside">
    {{#if @blog.cover}}
        <div class="sidebar-bg" style="background:url({{@blog.cover}})"></div>
    {{/if}}
    <div class="container-fluid">
        <div class="row">
            <header class="header col-sm-12" role="banner">
                {{! The logo of the blog }}
                <a href="/"><img class="avatar img-responsive" src="{{@blog.logo}}"></a>

                {{! The title of the blog }}
                <h1 class="site-title"><a href="/">{{@blog.title}}</a></h1>

                {{! The description of the blog }}
                <p class="description">{{@blog.description}}</p>

                <hr>

                {{! Navigation menu }}
                {{> "nav"}}

            </header>
        </div>
    </div>

</div>